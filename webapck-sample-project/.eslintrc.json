{
    "parser": "babel-eslint",    
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 6, // 指定为es6版本
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": { 
        "eqeqeq": "off",
        "curly": "error"
    },
    "plugins": [
        "react"
    ]
}